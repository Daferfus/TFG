
{% extends 'layout.jinja2' %}


{% block content %}
  

  <div class="container">
    {% include 'messages.jinja2' %}
    <h1 id="titol_de_seccio">{{ title }}</h1>
     {% set count = namespace(value=0) %}
    <table>
    {% for empresa in empreses %}
        <tr>
            <td>{{ empresa.nom }}</td>
            <td><a href="{{ url_for('empreses_bp.editar_empresa', usuari=empresa.nom_de_usuari) }}"><button>Editar</button></a>
            <td>
              <form method="POST" action="{{ url_for('empreses_bp.eliminacio_de_empresa', usuari=empresa.nom_de_usuari) }}">
                <button type="submit">Eliminar</button>
              </form>
        </tr>
        {% set count.value = count.value + 1 %}
    {% endfor %}
    </table>
    <a href="{{ url_for('empreses_bp.anyadir_empresa', nombre_de_empresa=count.value) }}"><button>Anyadir Empresa</button>
  </div>

{% endblock %}