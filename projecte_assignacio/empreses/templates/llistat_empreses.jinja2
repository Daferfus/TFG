
{% extends 'layout.jinja2' %}


{% block content %}
  

  <div class="container">
    {% include 'messages.jinja2' %}
    <h1 id="titol_de_seccio">{{ title }}</h1>
      <div class="botons">
        <input id="fileInput_empresa" name="fichero" type="file" style="display:none;" />
        <button type="button" id="izquierda" onclick="document.getElementById('fileInput_empresa').click();">Importar Empreses</button>
        <a href="{{ url_for('empreses_bp.exportar_empreses') }}">
          <button id="derecha"">Exportar Empreses</button>
        </a>
    </div>
    
    {{ form.filtrar_empresa.label }}
    {{ form.filtrar_empresa }}

     {% set count = namespace(value=0) %}
    <table class="llistat">
    {% for empresa in empreses.items %}
        <tr>
            {% if (empresa.assignacions | length) == true %}
              <td><b>{{ empresa.nom }}</b> <br> (0% disponible)</td>
            {% else %}
              <td><b>{{ empresa.nom }}</b> <br> ({{ (1 - ((empresa.assignacions | length) // (empresa.practiques | length)))*100 }}% disponible)</td>
            {% endif %}
            <td><a href="{{ url_for('empreses_bp.editar_empresa', usuari=empresa.nom_de_usuari) }}"><button>üñä</button></a>
            <td>
              <form method="POST" action="{{ url_for('empreses_bp.esborrar_empresa', usuari=empresa.nom_de_usuari) }}">
                <button type="submit">üóëÔ∏è</button>
              </form>
            <td><a href="{{ url_for('empreses_bp.practiques', usuari=empresa.nom_de_usuari) }}"><button class="vistes">Vore Pr√†ctiques</button></a>
        </tr>
        {% set count.value = count.value + 1 %}
    {% endfor %}
    </table>
    <a href="{{ url_for('empreses_bp.afegir_empresa', nombre_de_empresa=count.value) }}"><button class="afegir">Afegir Empresa</button>
    <div class=pagination>
      <ul>
      {% if empreses.has_prev %}
        <li>
          {% if form.filtrar_empresa.data %}
            <a class="pag" href="{{ url_for('empreses_bp.llistat', filtro=form.filtrar_empresa.data, pagina=empreses.prev_num) }}">Anterior</a>
          {% else %}
            <a class="pag" href="{{ url_for('empreses_bp.llistat', pagina=empreses.prev_num) }}">Anterior</a>
          {% endif %}
        </li>
      {% endif %}

      <!-- all page numbers -->
      {% for page_num in empreses.iter_pages() %}
          {% if page_num %}
              {% if page_num != empreses.page %}
                  <li>
                    {% if form.filtrar_empresa.data %}
                      <a class="pag" href="{{ url_for('empreses_bp.llistat', filtro=form.filtrar_empresa.data, pagina=page_num) }}">{{ page_num }}</a>
                    {% else %}
                      <a class="pag" href="{{ url_for('empreses_bp.llistat', pagina=page_num) }}">{{ page_num }}</a>
                    {% endif %}
                  </li>
              {% else %}
                  <li class="active">
                      <a class="pag" href="#">{{ page_num }}</a>
                  </li>
              {% endif %}
        {% else %}
            <li>
                <span class="ellipsis" style="white-space; nowrap; overflow: hidden; text-overflow: ellipsis">‚Ä¶</span>
            </li>
        {% endif %}
      {% endfor %}

      <!-- next page -->
      {% if empreses.has_next %}
      <li>
        {% if form.filtrar_empresa.data %}
          <a class="pag" href="{{ url_for('empreses_bp.llistat', filtro=form.filtrar_empresa.data, pagina=empreses.next_num) }}">Siguiente</a>
        {% else %}
          <a class="pag" href="{{ url_for('empreses_bp.llistat', pagina=empreses.next_num) }}">Siguiente</a>
        {% endif %}
      </li>
      {% endif %}
    </ul>
    </div>

  </div>

{% endblock %}