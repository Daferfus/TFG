
{% extends 'layout.jinja2' %}


{% block content %}
  

  <div class="container">
    {% include 'messages.jinja2' %}
    <h1 id="titol_de_seccio">{{ title }}</h1>
    <form method="POST" action="{{ url_for('alumnes_bp.recollir_fitxer_alumnes') }}">
        <button type="file">Importar Alumnes</button>
    </form>
    <table>
    {% for alumne in alumnes %}
        <tr>
            <td>{{ alumne.nom_i_cognoms }}</td>
            <td><a href="{{ url_for('alumnes_bp.editar_alumne', usuari=alumne.nom_de_usuari) }}"><button>Editar</button></a>
            <td>
              <form method="POST" action="{{ url_for('alumnes_bp.eliminacio_de_alumne', usuari=alumne.nom_de_usuari) }}">
                <button type="submit">Eliminar</button>
              </form>
        </tr>
    {% endfor %}
    </table>
    <a href="{{ url_for('alumnes_bp.anyadir_alumne') }}"><button>Anyadir Alumne</button>
  </div>

{% endblock %}