
{% extends 'layout.jinja2' %}


{% block content %}
  

  <div class="container">
    {% include 'messages.jinja2' %}
    
    <h1 id="titol_de_seccio">{{ title }}</h1>
    
    <div class="botons">
      <input id="fileInput_alumne" name="fichero" type="file" style="display:none;" />
      <button type="button" id="izquierda" onclick="document.getElementById('fileInput_alumne').click();">Importar Alumnes</button>
      <a href="{{ url_for('alumnes_bp.exportar_alumnes') }}">
        <button id="derecha"">Exportar Alumnes</button>
      </a>
    </div>
    
    {{ form.filtrar_alumne.label }}
    {{ form.filtrar_alumne }}
    
    <table class="llistat">
    {% for alumne in alumnes.items %}
        <tr>
            <td>{{ alumne.nom_i_cognoms }} ({{ alumne.grup }})</td>
            <td class="editar"><a href="{{ url_for('alumnes_bp.editar_alumne', usuari=alumne.nom_de_usuari) }}"><button>🖊</button></a>
            <td class="borrar">
              <form method="POST" action="{{ url_for('alumnes_bp.esborrar_alumne', usuari=alumne.nom_de_usuari) }}">
                <button type="submit">🗑️</button>
              </form>
            </td>
        </tr>
    {% endfor %}
    </table>
    <a href="{{ url_for('alumnes_bp.afegir_alumne') }}"><button class="afegir">Afegir Alumne</button>

    <div class=pagination>
      <ul>
      {% if alumnes.has_prev %}
        <li>
            {% if form.filtrar_alumne.data %}
              <a class="pag" href="{{ url_for('alumnes_bp.llistat', filtro=form.filtrar_alumne.data, pagina=alumnes.prev_num) }}">Anterior</a>
            {% else %}
              <a class="pag" href="{{ url_for('alumnes_bp.llistat', pagina=alumnes.prev_num) }}">Anterior</a>
            {% endif %}
        </li>
      {% endif %}

      <!-- all page numbers -->
      {% for page_num in alumnes.iter_pages() %}
          {% if page_num %}
              {% if page_num != alumnes.page %}
                  <li>
                      {% if form.filtrar_alumne.data %}
                        <a class="pag" href="{{ url_for('alumnes_bp.llistat', filtro=form.filtrar_alumne.data, pagina=page_num) }}">{{ page_num }}</a>
                      {% else %}
                        <a class="pag" href="{{ url_for('alumnes_bp.llistat', pagina=page_num) }}">{{ page_num }}</a>
                      {% endif %}
                  </li>
              {% else %}
                  <li class="active">
                      <a class="pag" href="#">{{ page_num }}</a>
                  </li>
              {% endif %}
        {% else %}
            <li>
                <span class="ellipsis" style="white-space; nowrap; overflow: hidden; text-overflow: ellipsis">…</span>
            </li>
        {% endif %}
      {% endfor %}

      <!-- next page -->
      {% if alumnes.has_next %}
      <li>
          {% if form.filtrar_alumne.data %}
            <a class="pag" href="{{ url_for('alumnes_bp.llistat', filtro=form.filtrar_alumne.data, pagina=alumnes.next_num) }}">Siguiente</a>
          {% else %}
            <a class="pag" href="{{ url_for('alumnes_bp.llistat', pagina=alumnes.next_num) }}">Siguiente</a>
          {% endif %}
      </li>
      {% endif %}
    </ul>
    </div>

  </div>
{% endblock %}